<div class="row">
  <div class="col-6 mx-auto">
    <form action="/records" method="POST">
      <div class="mb-3 row">
        <label for="note" class="col-sm-3 col-form-label">*必填欄位</label>
        <div class="col-sm-9">
          <input type="text" class="form-control-plaintext" id="note" value="請輸入支出">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="name" class="col-sm-3 col-form-label">名稱*</label>
        <div class="col-sm-9">
          <input type="text" class="form-control" id="name" name="name">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="date" class="col-sm-3 col-form-label">日期*</label>
        <div class="col-sm-9">
          <input type="date" class="form-control" id="date" name="date">
        </div>
      </div>
      <div class="mb-3 row">
        <label for="category" class="col-sm-3 col-form-label">類別*</label>
        <div class="col-sm-9">
          <select class="form-select" name="categoryId" id="categoryId" aria-label=".form-select example">
            <option selected>類別</option>
            {{#each categories}}
            <option value="{{ this._id }}">{{ this.name }}</option>
            {{/each}}
          </select>
        </div>
      </div>
      <div class="mb-3 row">
        <label for="amount" class="col-sm-3 col-form-label">金額*</label>
        <div class="col-sm-9">
          <input type="number" min="0" class="form-control" id="amount" name="amount">
        </div>
      </div>
      <div class="mt-3 row">
        <span class="col-sm-3 col-form-label fs-3"></span>
        <div class="col-sm-9">
          <button type="submit" class="btn btn-outline-dark form-control">新增支出</button>
        </div>
      </div>
    </form>
  </div>
</div>